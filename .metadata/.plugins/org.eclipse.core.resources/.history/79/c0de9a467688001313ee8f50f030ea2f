import acm.program.*;

public class Hailstone extends ConsoleProgram {
	public void run() {
		/* You fill this in */
		int n = readInt("Please input a number: ");
		/*int even = n = n / 2;
		int odd = n = 3*n + 1;*/
			while (n > 1) {
				if ((n % 2) == 0) {
					n /= 2;
					} else {
					n = 3 * n + 1;
				}
				println(n);

			}
	}
}



